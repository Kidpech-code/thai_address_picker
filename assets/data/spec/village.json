{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Village",
  "description": "หมู่บ้าน (Village) ของประเทศไทย",
  "type": "object",
  "properties": {
    "id": { "type": "integer", "description": "รหัสหมู่บ้าน (Primary Key)" },
    "name_th": { "type": "string", "maxLength": 255, "description": "ชื่อหมู่บ้าน (ภาษาไทย)" },
    "moo_no": { "type": "integer", "description": "หมายเลขหมู่ (Moo Number)" },
    "sub_district_id": { "type": "integer", "description": "FK → sub_districts.id" },
    "lat": { "type": ["number", "null"], "description": "ละติจูด (ถ้ามี)" },
    "long": { "type": ["number", "null"], "description": "ลองจิจูด (ถ้ามี)" },
    "created_at": { "type": ["string", "null"], "format": "date-time" },
    "updated_at": { "type": ["string", "null"], "format": "date-time" },
    "deleted_at": { "type": ["string", "null"], "format": "date-time" }
  },
  "required": ["id", "name_th", "moo_no", "sub_district_id"]
}
